{
  // Snippets
  "snippets.userSnippetsDirectory": "~/dotfiles/vim/snippets",
  // Prettier options
  "coc.preferences.formatOnSaveFiletypes": ["typescript"],
  // // TabNine options
  // "tabnine.disable_filetypes": ["vimwiki", "javascript", "vim", "markdown", "yaml"],
  // Javascript options
  "tsserver.enable": true,
  "tsserver.npm": "/usr/local/bin/npm",
  "eslint.run": "onSave",
  // YAML options
  "yaml.schemas": {
    "kubernetes": ["/k.*.yaml", "/k.*.yml"],
    "https://raw.githubusercontent.com/docker/cli/master/cli/compose/schema/data/config_schema_v3.9.json": ["/*compose.yaml", "/*compose.yml"]
  },
  // LSP
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  }
